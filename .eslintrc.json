{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"next/core-web-vitals",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto",
				"trailingComma": "es5",
				"tabWidth": 2,
				"semi": true,
				"singleQuote": true
			}
		]
	}
}
